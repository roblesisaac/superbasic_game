{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2020", "WebWorker"],
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "allowJs": false,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
